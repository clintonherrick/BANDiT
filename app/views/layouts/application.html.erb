<!DOCTYPE html>
<html></html>
<head>
  <title>BANDiT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body></body>
<nav class="navbar navbar-default navbar-inverse">
  <div class="container">
    <div class="header-logo">
      <%= link_to image_tag ("header-logo.png")%>
    </div>
    <ul class="nav navbar-nav navbar-right"></ul>
      <%= link_to " ", new_user_session_path %>
    <% if user_signed_in? %>
    <% end %>
  </div>

  <p class="notice">
    <%= notice %>
  </p>
  <p class="alert">
    <%= alert %>
  </p>
</nav>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <ul>
        <li>
          <%= link_to "All Bands", root_path %>
        </li>
        <% Genre.all.each do |genre| %>
          <li>
            <%= link_to genre.name, bands_path(genre: genre.name) %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-10">
      <%= yield %>
    </div>
  </div>
</div>
